<h1 class="text-center">Wikinimous</h1>

<h3 class="text-center"><%= link_to "Add an article", new_article_path %></h3>

<% @articles.each do |article| %>
<div>
  <ul>
    <li>
      <h2><%= article.category %>(category)</h2>
      <h3> <%= link_to article.title, article_path(article) %></h3>
      <p>by <%= article.author %></p>
    </li>
    <%= link_to "Delete article", article_path(article), method: :delete, data: { confirm: "Are you sure ?" } %>
  </ul>
</div>
<% end %>
